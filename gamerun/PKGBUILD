# Maintainer: Vasiliy Stelmachenok <ventureo@cachyos.org>
pkgname=gamerun
pkgver=1.0.1
pkgrel=1
pkgdesc='Helper script to run games in Wine with sandbox isolation'
url='https://github.com/ventureoo/PKGBUILDs'
license=(GPL-3.0)
arch=(any)
depends=(wine firejail)
optdepends=(
    'dxvk-pure-git: Recommended DXVK version'
    'vkd3d-proton-mingw-git: Recommended VKD3D-Proton version'
    'wine-pure-git: Recommended Wine version'
    'mangohud-pure-git: Recommended MangoHud version'
)
source=(gamerun)
sha256sums=('0546e6c83c28d00df88ccc5df9f55cb6e231a86bf38d9fe2a1c8829c34f9bc9f')

package() {
    install -Dm755 gamerun "$pkgdir/usr/bin/gamerun"
}
